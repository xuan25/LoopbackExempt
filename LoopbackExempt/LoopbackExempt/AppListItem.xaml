<UserControl x:Class="LoopbackExempt.AppListItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LoopbackExempt"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="300" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
    <Grid>
        <TextBlock x:Name="AppnameBox" Text="Appname" TextTrimming="CharacterEllipsis" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="30,0,5,0" ToolTip="{Binding ElementName=AppnameBox, Path=Text}"/>
        <CheckBox x:Name="AppCkb" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5,0,0,0"/>
    </Grid>
</UserControl>
